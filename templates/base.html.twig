<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Coronavirus!{% endblock %}</title>
        {% block stylesheets %}
    
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup">
                    <div class="navbar-nav  d-flex flex-row bd-highlight mb-3">
                        <a class="nav-item nav-link active" href={{ path('accueil') }}>{{ 'header.index'|trans }}<span class="sr-only">(current)</span></a>
                        <a class="nav-item nav-link" href={{ path('idea_proposition_index') }}>{{ 'header.community'|trans }}</a>
                        <a class="nav-item nav-link" href="#">{{ 'header.marketplace'|trans }}</br><i>{{ 'header.construction'|trans }}</i></a>
                        <a class="nav-item nav-link" href={{ path('rule') }}>{{ 'header.chat'|trans }}</a>
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="d-flex flex-row-reverse bd-highlight">
                        <a class="nav-item nav-link" href={{ path('app_logout') }}>{{ 'header.btnDeconnexion'|trans }}</a>
                        <a class ="nav-item nav-link" href="#">
                            <img src="https://img.icons8.com/carbon-copy/100/000000/shopping-cart-loaded.png" style="width: 50%; height: 81%;"/>
                        </a>
                    </div>
                    {% else %}
                    <div class ="d-flex flex-row-reverse bd-highlight">                            
                        <a class="nav-item nav-link" href="{{ path('app_login') }}">{{ 'header.btnConnexion'|trans }}</a>
                        <a class="nav-item nav-link" href="{{ path('app_register') }}">{{ 'header.btnInscription'|trans }}</a>
                    </div>
                    {% endif %}
                </div>
        </div>
    </nav>
        </header>
        
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>
                <script src="/build/app.js"></script> -->



                
        {% endblock %}
    </body>
</html>
