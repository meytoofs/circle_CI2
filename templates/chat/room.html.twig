{% extends 'base.html.twig' %}

{% block title %}Room Coronavirus{% endblock %}

{% block body %}
<section>
    <h1>Liste des rooms</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de la room:</th>
                <th>Type de Room:</th>
                <th>Nombre de personnes connecté</th>
                <th>Heure du dernier message:</th>
            </tr>
            {% for room in rooms %}
            <tr>
                <td>{{ room.title }}</td>
                <td>{{ room.type }}</td>
                <td>
                    <a class="btn btn-info" role="button" href="{{ path('chat_show', {'id': room.id}) }}">Connexion</a>
                </td>
            </tr>
            {{dump(app)}};
            {% endfor %}
        </tbody>

    </table>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <a role="button" class="btn btn-primary" href="{{ path('room_news') }}">Créer nouvel Room</a>
    {% endif %}
</section>
{% endblock %}
