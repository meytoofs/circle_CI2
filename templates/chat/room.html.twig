{% extends 'base.html.twig' %}

{% block title %}Room Coronavirus{% endblock %}

{% block body %}
<section>
    <h1>{{ 'chat_room.list_room'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'chat_room.tab_nom'|trans }}</th>
                <th>{{ 'chat_room.tab_type'|trans }}</th>
            </tr>
            {% for room in rooms %}
            <tr>
                <td>{{ room.title }}</td>
                <td>{{ room.type }}</td>
                <td>
                    <a class="btn btn-info" role="button" href="{{ path('chat_show', {'id': room.id}) }}">Connexion</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <a role="button" class="btn btn-primary" href="{{ path('room_news') }}">{{ 'chat_room.btn_creer'|trans }}</a>
    {% endif %}
</section>
{% endblock %}
